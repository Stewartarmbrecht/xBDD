{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "group": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-all",
            "group": "test",
            "command": "pwsh",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "${workspaceFolder}/scripts/test-all.ps1"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-automatinguitesting",
            "group": "test",
            "command": "pwsh",
            "type": "process",
            "options": {
				"cwd": "${workspaceFolder}",
				"env": {
                    "xBDD:HtmlReport:FailuresOnly": "false"
                }
            },
            "args": [
				"${workspaceFolder}/scripts/test.ps1",
                "xBDD.Features.AutomatingUITesting",
                "false",
                "false",
                "false",
            ],
            "problemMatcher": "$msCompile"
        },
