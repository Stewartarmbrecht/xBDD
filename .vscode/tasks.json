{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "group": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-all",
            "group": "test",
            "command": "pwsh",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "${workspaceFolder}/scripts/test-all.ps1"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-core",
            "group": "test",
            "command": "pwsh",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "${workspaceFolder}/scripts/test-core.ps1"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-reporting",
            "group": "test",
            "command": "pwsh",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "${workspaceFolder}/scripts/test-reporting.ps1"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-reporting-failures-only",
            "group": "test",
            "command": "pwsh",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "XBDD_FAILURES_ONLY": "true"
                }
            },
            "args": [
                "${workspaceFolder}/scripts/test-reporting.ps1"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}