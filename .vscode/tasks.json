{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "group": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "group": "test",
            "command": "pwsh",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "${workspaceFolder}/scripts/test.ps1"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-watch",
            "group": "test",
            "command": "pwsh",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "xBDD:Browser:Watch": "true"
                }
            },
            "args": [
                "${workspaceFolder}/scripts/test.ps1"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-failures-only",
            "group": "test",
            "command": "pwsh",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "XBDD_FAILURES_ONLY": "true"
                }
            },
            "args": [
                "${workspaceFolder}/scripts/test.ps1"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}