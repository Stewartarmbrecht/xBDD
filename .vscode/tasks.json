{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "group": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-all",
            "group": "test",
            "command": "pwsh",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "${workspaceFolder}/scripts/test-all.ps1"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-features",
            "group": "test",
            "command": "pwsh",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "${workspaceFolder}/scripts/test-features.ps1"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-long",
            "group": "test",
            "command": "pwsh",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "${workspaceFolder}/scripts/test-long.ps1"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-short",
            "group": "test",
            "command": "pwsh",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "${workspaceFolder}/scripts/test-short.ps1"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-watch",
            "group": "test",
            "command": "pwsh",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "xBDD:Browser:Watch": "true"
                }
            },
            "args": [
                "${workspaceFolder}/scripts/test.ps1"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-failures-only",
            "group": "test",
            "command": "pwsh",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "XBDD_FAILURES_ONLY": "true"
                }
            },
            "args": [
                "${workspaceFolder}/scripts/test-all.ps1"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-my-sample",
            "group": "test",
            "command": "pwsh",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "XBDD_FAILURES_ONLY": "true"
                }
            },
            "args": [
                "${workspaceFolder}/scripts/test-my-sample.ps1"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "pwsh",
            "type": "process",
            "args": [
                "${workspaceFolder}/scripts/publish.ps1"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-tools",
            "command": "pwsh",
            "type": "process",
            "args": [
                "${workspaceFolder}/scripts/publish-tools.ps1"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "deploy-tools",
            "command": "pwsh",
            "type": "process",
            "args": [
                "${workspaceFolder}/scripts/deploy-tools.ps1"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$msCompile"
